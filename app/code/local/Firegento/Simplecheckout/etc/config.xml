<?xml version="1.0"?>

<config>
    <modules>
        <Firegento_Simplecheckout>
            <version>0.0.1</version>
        </Firegento_Simplecheckout>
    </modules>
    
	<global>
		
		<blocks>
			<simplecheckout>
				<class>Firegento_Simplecheckout_Block</class>
			</simplecheckout>
		</blocks>
		
 	 	<helpers>
	       <simplecheckout>
	           <class>Firegento_Simplecheckout_Helper</class>
	       </simplecheckout>
	    </helpers>
	    
	    <models>
			<simplecheckout>
				<class>Firegento_Simplecheckout_Model</class>
			</simplecheckout>
		</models>
			    
	</global>    
	
    <frontend>
		
    	<routers>
    		<checkout>
    			<args>
    				<modules>
    					<simplecheckout before="Mage_Checkout">Firegento_Simplecheckout</simplecheckout>
    				</modules>
    			</args>
    		</checkout>
    	</routers>
    	
    	<layout>
            <updates>
                <Firegento_simplecheckout>
                	<file>simplecheckout.xml</file>
                </Firegento_simplecheckout>
            </updates>
       </layout>

    </frontend>
    
</config>
